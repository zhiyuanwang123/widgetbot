{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "typed-emotion": ["src/controllers/emotion/index.ts"],
      "logger": ["src/modules/logger.ts"],
      "raven": ["src/modules/sentry.ts"],
      "notify": ["src/app/notify.tsx"],

      "locales": ["src/app/locales"],
      "locales/*": ["src/app/locales/*"],

      "shared/*": ["src/components/shared/*"],

      "queries/*": ["src/queries/*"],
      "queries": ["src/queries/index.ts"],

      "socket-io": ["src/controllers/socket-io"],
      "client": ["src/controllers/apollo/index.ts"],
      "fluent": ["src/controllers/cerebral/fluent.ts"],
      "embed-api": ["src/controllers/embed-api"],
      "emoji": ["src/components/shared/Emoji/emoji.ts"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
